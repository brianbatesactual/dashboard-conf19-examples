{
    "dataSources": {
        "timechart_search": {
            "type": "ds.search",
            "options": {
                "query": "index=_internal | timechart count",
                "queryParameters": {
                    "latest": "$time.latest$",
                    "earliest": "$time.earliest$"
                }
            }
        },
        "total_count_search": {
            "type": "ds.search",
            "options": {
                "query": "index=_internal | stats count",
                "queryParameters": {
                    "latest": "$time.latest$",
                    "earliest": "$time.earliest$"
                }
            }
        },
        "event_by_component_search": {
            "type": "ds.search",
            "options": {
                "query": "index=_internal | stats count by component",
                "queryParameters": {
                    "latest": "$time.latest$",
                    "earliest": "$time.earliest$"
                }
            }
        }
    },
    "inputs": {
        "time_range": {
            "type": "input.timerange",
            "options": {
                "token": "time",
                "defaultValue": "0,now"
            }
        }
    },
    "layout": {
        "type": "absolute",
        "options": {
            "width": 1600,
            "height": 800,
            "display": "auto-scale",
            "backgroundColor": "#eff0f1"
        },
        "structure": [
            {
                "item": "sv_total_event",
                "position": {
                    "h": 300,
                    "w": 750,
                    "x": 30,
                    "y": 20
                }
            },
            {
                "item": "sv_event_by_component",
                "position": {
                    "h": 300,
                    "w": 750,
                    "x": 820,
                    "y": 20
                }
            },
            {
                "item": "event_over_time",
                "position": {
                    "h": 300,
                    "w": 1540,
                    "x": 30,
                    "y": 350
                }
            }
        ],
        "globalInputs": [
            "time_range"
        ]
    },
    "title": "Simple Dashboard",
    "description": "",
    "visualizations": {
        "sv_total_event": {
            "type": "viz.singlevalue",
            "title": "_internal event count",
            "options": {},
            "dataSources": {
                "primary": "total_count_search"
            }
        },
        "event_over_time": {
            "type": "viz.area",
            "title": "_internal event count over time",
            "dataSources": {
                "primary": "timechart_search"
            }
        },
        "sv_event_by_component": {
            "type": "viz.pie",
            "title": "_internal event count by component",
            "dataSources": {
                "primary": "event_by_component_search"
            }
        }
    }
}